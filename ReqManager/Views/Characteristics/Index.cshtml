@model IEnumerable<ReqManager.Entities.Project.CharacteristicsEntity>

@{
    ViewBag.Title = "Listing of Characteristics";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="characteristics" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.active)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CharacteristicsID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CharacteristicsID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CharacteristicsID })
                </td>*@
            </tr>
        }   
    </tbody>

</table>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        var filterValues = {};
        $('#characteristics').dataTable({
            serverSide: true,
            columns: [
                { data: "name" },
                { data: "description" },
                { data: "active" }
            ],
            ajax: function (data, callback, settings) {
                filterValues.draw = data.draw;
                filterValues.start = data.start;
                filterValues.length = data.length;
                $.ajax({
                    url: '/Characteristics/GetFilter',
                    method: 'GET',
                    data: filterValues
                }).done(callback);
            }

            @*"bServerSide": true,
            "bProcessing": true,
            ajax: {
                url: '@Url.Action("GetFilter", "Characteristics")',
                type: 'POST',
                data: {search : $('#characteristics_filter').val()}
            },
            "aoColumns": [
                       { "sName": "name" },
                       { "sName": "description" },
                       { "sName": "active" }
            ]*@
        });
    });
</script>
