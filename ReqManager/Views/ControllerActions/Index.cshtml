@model IEnumerable<ReqManager.Models.ControllerAction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Refresh Controller/Actions", "Refresh")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.controller)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.action)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.controller)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.action)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_controllerAction })
        </td>
    </tr>
}

</table>
