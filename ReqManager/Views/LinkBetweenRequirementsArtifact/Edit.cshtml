@model ReqManager.Entities.Link.LinkBetweenRequirementsArtifactsEntity

@{
    ViewBag.Title = "Edit Link between Requirement and Artifact";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.code)
        @Html.HiddenFor(model => model.LinkArtifactRequirementID)
        @Html.HiddenFor(model => model.ProjectArtifactID)
        @Html.HiddenFor(model => model.RequirementID)
        @Html.HiddenFor(model => model.CreationUserID)
        <fieldset disabled>

            <div class="form-group">
                @Html.Label("Link", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Artifact", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ProjectArtifactID, null, "SELECT THE ARTIFACT", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProjectArtifactID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Requirement", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.RequirementID, null, "SELECT THE REQUIREMENT", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RequirementID, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <div class="form-group">
            @Html.Label("Type Link", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TypeLinkID, null, "SELECT THE TYPE LINK",
               htmlAttributes: new { @class = "form-control select2" })
                @Html.ValidationMessageFor(model => model.TypeLinkID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
