@model IEnumerable<ReqManager.Entities.Link.LinkRequirementAttributesEntity>

@{
    ViewBag.Title = "Links between Requirements Attributes";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Attributes.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkRequirement.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Attributes.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkRequirement.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>
        <td>
            <div class="dropdown">
                <a href="#" title="Options" class="btn btn-default" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-chevron-down icon_8"></i>
                    <div class="ripple-wrapper"></div>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.RequirementAttributeID })</li>
                    <li>@Html.ActionLink("Details", "Details", new { id = item.RequirementAttributeID })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.RequirementAttributeID })</li>
                </ul>
            </div>
        </td>
    </tr>
}

</table>
