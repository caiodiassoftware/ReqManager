@model IEnumerable<ReqManager.Entities.Link.LinkRequirementAttributesEntity>

@{
    ViewBag.Title = "Links between Requirements Attributes";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Attributes.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkRequirement.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Attributes.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkRequirement.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RequirementAttributeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RequirementAttributeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RequirementAttributeID })
        </td>
    </tr>
}

</table>
