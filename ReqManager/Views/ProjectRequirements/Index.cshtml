@model IEnumerable<ReqManager.Entities.Project.ProjectRequirementsEntity>

@{
    ViewBag.Title = "Listing of Relationship between Project and Requirement";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="projectRequirement" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequirementID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.creationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.traceable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.nickName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requirement.code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.creationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.traceable)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ProjectRequirementID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ProjectRequirementID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ProjectRequirementID })
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $('#projectRequirement').dataTable({
            "bServerSide": true,
            "bProcessing": false,
            ajax: {
                "url": '@Url.Action("GetFilter", "ProjectRequirements")',
                "type": 'POST',
                "dataSrc": function (json) {
                    var return_data = new Array();
                    for (var i = 0; i < json.aaData.length; i++) {
                        return_data.push({
                            'project': json.aaData[i].Project.description,
                            'user': json.aaData[i].Users.nickName,
                            'code': json.aaData[i].Requirement.code,
                            'creationDate': fixDateTime(json.aaData[i].creationDate),
                            'traceable': json.aaData[i].traceable,
                            'action': '<a href=\"/ProjectRequirements/Edit/' +
                                json.aaData[i].ProjectRequirementID + '\">Edit</a> | <a href=\"/ProjectRequirements/Details/' +
                                json.aaData[i].ProjectRequirementID + '\">Details</a> | <a href=\"/ProjectRequirements/Delete/' +
                                json.aaData[i].ProjectRequirementID + '\">Delete</a>'
                        })
                    }

                    return return_data;
                }
            },
            "aoColumns": [
                { 'data': 'project' },
                { 'data': 'user' },
                { 'data': 'code' },
                { 'data': 'creationDate' },
                { 'data': 'traceable' },
                { 'data': 'action' },
            ]
        });
    });
</script>