@model IEnumerable<ReqManager.Entities.Acess.RoleEntity>

@{
    ViewBag.Title = "Listing of Roles";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

