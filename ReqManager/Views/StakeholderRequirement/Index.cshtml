@model IEnumerable<ReqManager.Entities.Project.StakeholderRequirementEntity>

@{
    ViewBag.Title = "Stakeholders interested in Requirements";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Requirement
        </th>
        <th>
            Stakeholder
        </th>
        <th>
            @Html.DisplayNameFor(model => model.creationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Requirement.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StakeholdersProject.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.creationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StakeholderRequirementID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StakeholderRequirementID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StakeholderRequirementID })
        </td>
    </tr>
}

</table>
