@model IEnumerable<ReqManager.Entities.Link.TypeLinkEntity>

@{
    ViewBag.Title = "Link Types";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Create By
        </th>
        <th>
            Description
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Users.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.creationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TypeLinkID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TypeLinkID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TypeLinkID })
        </td>
    </tr>
}

</table>
