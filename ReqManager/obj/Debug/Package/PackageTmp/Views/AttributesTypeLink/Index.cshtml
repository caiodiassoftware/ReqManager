@model IEnumerable<ReqManager.Entities.Link.AttributesTypeLinkEntity>

@{
    ViewBag.Title = "Type Link Attributes";
}


<table class="table">
    <tr>
        <th>
            Attribute
        </th>
        <th>
            Link Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Attributes.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeLink.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AttributesTypeLinkID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AttributesTypeLinkID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AttributesTypeLinkID })
        </td>
    </tr>
}

</table>
