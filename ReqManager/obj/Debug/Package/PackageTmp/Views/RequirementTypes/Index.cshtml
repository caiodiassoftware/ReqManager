@model IEnumerable<ReqManager.Entities.Requirement.RequirementTypeEntity>

@{
    ViewBag.Title = "Requirement Types";
}

<div class="form-group">
    @Html.ActionLink("Create New", "Create", "RequirementType", null, new { @class = "btn btn-primary" })
</div>
<table class="table">
    <tr>
        <th>
            Abreviation
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.abbreviation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RequirementTypeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RequirementTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RequirementTypeID })
        </td>
    </tr>
}

</table>
