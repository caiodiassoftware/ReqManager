@model IEnumerable<ReqManager.Entities.Acess.StakeholderClassificationEntity>

@{
    ViewBag.Title = "Stakeholder Classifications";
}

<div class="form-group">
    @Html.ActionLink("Create New", "Create", "StakeholderClassification", null, new { @class = "btn btn-primary" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClassificationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClassificationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClassificationID })
        </td>
    </tr>
}

</table>
